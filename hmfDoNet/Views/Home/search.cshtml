
@using hmfDoNet.Models;

<link rel="stylesheet" href="~/Css/HomeCss/css/main.css">
<link href="https://fonts.googleapis.com/css?family=Hind:400,600|Open+Sans:300,600" rel="stylesheet">
<link rel="stylesheet" href="~/Css/HomeCss/dist/sortable.min.css">
<script type="text/javascript" src="~/Css/HomeCss/dist/sortable.min.js"></script>

@*<link href="http://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">*@

<link rel="stylesheet" type="text/css" href="~/Css/TipsCss/css/animate.css">
<link rel="stylesheet" href="~/Css/TipsCss/dist/noticejs.css" />


<div class="htmleaf-container">

    <main class="sortable">
        <div class="container">
            <div class="wrapper">



                @if (ViewBag.userLists != null && ViewBag.userLists.Count > 0)
                {
                    foreach (var item in ViewBag.userLists)
                    {
                        <form action="/home/AddFlowee" method="post">
                            <input type="text" value="@item.Username" name="Username">

                            <input style="display:none;" type="text" value="@item.ObjectId" name="ObjectId">
                            <div class="col-md-offset-10">
                                <input id="btn3" type="submit" name="action" value="添加关注" class="btn btn-default" />
                            </div>
                        </form>
                    }

                }
                else
                {
                    <h2>搜索用户无结果</h2>
                }
            </div>
            <hr />
            <h2>搜索作品结果如下</h2>
            <div class="wrapper">

                <div id="sortable" class="sjs-default">

                    @if (ViewBag.cardsList != null && ViewBag.cardsList.Count > 0)
                    {
                        foreach (var item in (List<Cards>)ViewBag.cardsList)
                        {
                            <div data-sjsel="@item.cardClassification">
                                <a href="/details/index?id=@item.cardObjectId">
                                    <div class="card">
                                        <img class="card__picture" src="@item.cardImageData" alt="" />

                                        <div class="card-infos">
                                            <h2 class="card__title">@item.cardTitle</h2>
                                            <p class="card__text">
                                                @item.cardContent
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <h2>搜索文章无结果</h2>
                    }

                </div>
            </div>
        </div>
    </main>

</div>

<script type="text/javascript">
    document.querySelector('#sortable').sortablejs()
</script>
<script src="http://cdn.bootcss.com/jquery/1.11.0/jquery.min.js" type="text/javascript"></script>
<script>window.jQuery || document.write('<script src="js/jquery-1.11.0.min.js"><\/script>')</script>
<script src="~/Css/TipsCss/dist/notice.js"></script>

<script type="text/javascript">

    $("#btn3").click(function (e) {

        new NoticeJs({
            text: '关注成功',
            position: 'topRight',
            animation: {
                open: 'animated bounceIn',
                close: 'animated bounceOut'
            }
        }).show();
    });


</script>